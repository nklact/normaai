{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Norma AI",
  "version": "0.1.8",
  "identifier": "com.nikola.norma-ai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "url": "index.html",
        "title": "Norma AI",
        "width": 1200,
        "height": 800,
        "minWidth": 375,
        "minHeight": 812,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.svg",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "$APPLE_TEAM_ID"
    }
  }
}
